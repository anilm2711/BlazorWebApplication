

<ul>
    @foreach (Product prd in Products)
    {
        <li class="media my-3">
            <div class="media-img-wrapper mr-2">
                <a href="#">
                    <img class="media-img" src=@prd.ImageUrl alt=@prd.Title>
                </a>
            </div>
            <div class="media-body">
                <a href="#">
                    <h4 class="mb-0">@prd.Title</h4>
                </a>
                <p>@prd.Description</p>
                <h5 class="price">Price:$ @prd.Price </h5>
            </div>


        </li>
    }
</ul>





