@page "/profile"
@attribute [Authorize]

<AuthorizeView>
    <h5>Hello  <i><b>@context.User.Identity.Name </b></i>!</h5>
</AuthorizeView><hr />
<h5><b>Delivery Address</b></h5>
<AddressForm></AddressForm>
<p></p>
<hr />
<h5><b>Change Password</b></h5>
<EditForm Model="userChangePassword" OnValidSubmit="ChangePassword">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <div class="mb-3">
        <label for="password">New Password</label>
        <InputText id="password" @bind-Value="userChangePassword.Password" type="password" class="form-control"></InputText>
        <ValidationMessage For="@(()=>userChangePassword.Password)"></ValidationMessage>
    </div>
    <div class="mb-3">
        <label for="confirmPassword">Confirm New Password</label>
        <InputText id="confirmPassword" @bind-Value="userChangePassword.ConfirmPassword" class="form-control" type="password"></InputText>
        <ValidationMessage For="@(()=>userChangePassword.ConfirmPassword)"></ValidationMessage>
    </div>
    <button type="submit" class="btn btn-primary">Apply</button>

</EditForm>
<div class="text-success">
    <span>@message</span>
</div>